<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <include
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/linear_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/backgu"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:paddingTop="8dp" >

                <com.studentsos.view.CircleImageView
                    android:id="@+id/person_touxiang"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/me_iv_default"
                    app:border_width="2dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/person_nicheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:text="@string/nicheng"
                    android:textColor="@color/darker_gray" >
                </TextView>

                <EditText
                    android:id="@+id/nichengEdt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/person_nicheng"
                    android:background="@null"
                    android:maxLength="10"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relat_school"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.3dp"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/Spinner_schoo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:text="学校："
                    android:textColor="@color/darker_gray" />

                <TextView
                    android:id="@+id/Spinner_school"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/morede3"
                    android:layout_toRightOf="@+id/Spinner_schoo"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/morede3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="3dp"
                    android:src="@drawable/setting_iv_more" >
                </ImageView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relat_depart"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.3dp"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/Spinner_departTe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:text="学院："
                    android:textColor="@color/darker_gray" />

                <Spinner
                    android:id="@+id/Spinner_depart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/Spinner_departTe" >
                </Spinner>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relat_major"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.3dp"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/Spinner_majorTe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:text="专业："
                    android:textColor="@color/darker_gray" />

                <Spinner
                    android:id="@+id/Spinner_major"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/Spinner_majorTe" >
                </Spinner>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relat_year"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.3dp"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/Spinner_yearTe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:text="学年："
                    android:textColor="@color/darker_gray" />

                <Spinner
                    android:id="@+id/Spinner_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/Spinner_yearTe" >
                </Spinner>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relat_class"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="0.3dp"
                android:background="#FFFFFF"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/Spinner_classTe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:text="班号："
                    android:textColor="@color/darker_gray" />

                <Spinner
                    android:id="@+id/Spinner_classcount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/Spinner_classTe"
                     >
                </Spinner>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp" >

                <Button
                    android:id="@+id/personyesbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:text="@string/personyes"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>