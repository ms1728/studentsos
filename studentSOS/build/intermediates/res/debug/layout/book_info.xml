<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <include
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header" />

    <ScrollView
        android:id="@+id/scro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:background="#FFFFFF" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EDEDED"
            android:orientation="vertical"
            android:scrollbarStyle="outsideOverlay" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/book_view"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/book_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="书名"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/book_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:text="作者"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/book_press"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出版社"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="15dp" >

                <Button
                    android:id="@+id/classinbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape1"
                    android:text="@string/classin"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/classoutbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape1"
                    android:text="@string/classout"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.3dp"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:padding="12dp" >

                <TextView
                    android:id="@+id/book_description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="      内容介绍：《数字电子技术基础习题解答（第5版）》教材的使用而编写的习题解答。《数字电子技术基础习题解答（第5版）》除包含有《数字电子技术基础习题解答（第5版）》全部习题的详细解答以外，还含有各章习题类型以及每种类型题目的解题方法和步骤等内容。
                 "
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/tv_loadmore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="2dp"
                    android:gravity="right"
                    android:paddingRight="2dp"
                    android:text="查看更多 "
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.3dp"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="目录"
                    android:textSize="15sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/mulu_lview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout><!-- From: file:/D:/Androidwork/studentSOS/res/layout/book_info.xml -->