<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header" />

    <TextView
        android:id="@+id/Spinner_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Spinner_departTe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/Spinner_depart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp" >
    </Spinner>

    <TextView
        android:id="@+id/Spinner_majorTe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/Spinner_major"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp" >
    </Spinner>

    <TextView
        android:id="@+id/Spinner_yearTe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/Spinner_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp" 
        android:paddingBottom="20dp">
    </Spinner>

    <LinearLayout
        android:id="@+id/loginBtn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

        <Button
            android:id="@+id/spinner_saveBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:text="@string/loginBt"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/Androidwork/studentSOS/res/layout/registe_school.xml -->